<h1>Calendar</h1>
<% @events.each do |e| %>
  <div>
    <%= "#{e.name}: #{e.day}, #{e.start_time} - #{e.end_time} = #{e.duration} half hr" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th></th> <!-- column for times -->
      <%= day_labels %>
    </tr>
  </thead>

  <tbody>
    <%= calendar_body %>
  </tbody>
</table>
